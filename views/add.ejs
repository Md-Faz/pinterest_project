<% include ./partials/header.ejs%> <% include ./partials/navbar.ejs%>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <div class="bg-zinc-700 p-5 m-5 rounded-sm">
    <h1 class="text-2xl">Create a new post</h1>
    <hr class="opacity-50" />
    <br />
    <form
      class="flex flex-col gap-5"
      action="/createpost"
      method="post"
      enctype="multipart/form-data"
    >
      <input
        class="w-1/3 rounded-md hidden"
        type="file"
        id="postimage"
        name="postimage"
      />
      <label
        class="px-3 py-2 cursor-pointer rounded-md border-2 border-red-700 w-1/6 text-center"
        for="postimage"
        >Upload a Pin</label
      >

      <input
        class="text-black block w-1/3 px-3 py-2 rounded-md"
        type="text"
        placeholder="Title"
        name="title"
      />
      <textarea
        class="text-black block w-1/3 px-3 py-2 rounded-md"
        type="text"
        placeholder="Description"
        name="description"
      ></textarea>
      <input
        class="text-white bg-red-700 text-lg block w-1/3 px-3 py-2 rounded-md cursor-pointer"
        type="submit"
        value="Create Post"
      />
    </form>
  </div>
</div>

<% include ./partials/footer.ejs%>
